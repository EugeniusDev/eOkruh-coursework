<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="eOkruh.Presentation.Pages.MainPage"
            xmlns:viewmodel="clr-namespace:eOkruh.Presentation.ViewModels"
            xmlns:tabs="clr-namespace:eOkruh.Presentation.Pages.Tabs"
            x:DataType="viewmodel:MainViewModel"
            BarBackgroundColor="{StaticResource White}"
            UnselectedTabColor="{StaticResource Black}"
            SelectedTabColor="{StaticResource Interactables}">
    <tabs:PersonnelTab BindingContext="{Binding PersonnelVm}" />
    <tabs:StructuresTab BindingContext="{Binding StructuresVm}" />
    <tabs:PropertyTab BindingContext="{Binding PropertyVm}" />
    <tabs:UsersTab BindingContext="{Binding UsersVm}" />
</TabbedPage>
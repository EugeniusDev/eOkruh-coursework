<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="eOkruh.Presentation.Pages.MainPage"
            xmlns:viewmodel="clr-namespace:eOkruh.Presentation.ViewModels"
            x:DataType="viewmodel:MainViewModel"
            BarBackgroundColor="{StaticResource White}"
            UnselectedTabColor="{StaticResource Black}"
            SelectedTabColor="{StaticResource Interactables}">
    <ContentPage Title="Test">
        <VerticalStackLayout>
            <Label Text="{Binding User.FullName}" FontSize="Large" />
            <SearchBar Placeholder="Test" />
        </VerticalStackLayout>
    </ContentPage>
    <ContentPage  Title="Test 2">
        <VerticalStackLayout>
            <Label Text="{Binding User.FullName}" FontSize="Large" />
        </VerticalStackLayout>
    </ContentPage>
    <ContentPage Title="Test 3" >
        <VerticalStackLayout>
            <Label IsEnabled="{Binding UsersAccessPermitted}" 
                    IsVisible="{Binding UsersAccessPermitted}" />
            <Label Text="Binding string to show that access is not permitted" />
        </VerticalStackLayout>
    </ContentPage>
</TabbedPage>